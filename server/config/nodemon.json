{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "src/",
    "config/",
    "app.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json",
  "legacyWatch": true,
  "watchInterval": 1000
}
